<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <strong>@Html.Encode("Welcome " + User.Identity.Name)</strong>
        @Html.ActionLink("Logout", "LogOut", "User")
        <strong>@Html.Encode(" | ")</strong>
        @Html.ActionLink("Change Password", "ChangePassword", "StudentProfile")
    }
    else
    {
        <strong>@Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink("Login", "LogIn", "User")
        <strong>@Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink(" | Register", "Registration", "User")
        <strong>@Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink(" | Forgot Password", "ForgotPassword", "User")
    }

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
