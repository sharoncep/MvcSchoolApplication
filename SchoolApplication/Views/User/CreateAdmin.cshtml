@model SchoolApplication.Models.UserLoginModel

@{
    ViewBag.Title = "CreateAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateAdmin</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.ValidationSummary()
        <fieldset>
            <legend>Create Administator</legend>
            <div>@Html.LabelFor(x => x.UserName)</div>
            <div>@Html.TextBoxFor(x => x.UserName)
                @Html.ValidationMessageFor(x => x.UserName)
            </div>

            <div>@Html.LabelFor(x => x.Password)</div>
            <div>@Html.PasswordFor(x => x.Password)
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div>
                <input type="submit" value="Create Administrator" />
            </div>
            <br />
            <div style="color: green">@ViewBag.message</div>
        </fieldset>
    </div>
}