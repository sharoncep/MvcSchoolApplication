@model SchoolApplication.Areas.Admin.Models.DepartmentModel

@{
    ViewBag.Title = "Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

@using (Html.BeginForm())
{
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Department Listing  @Html.ActionLink("+ Add New", "Add", "Department", new { @class = "btn btn-outline btn-primary pull-right" })</h1>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="JQdataTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Department Code</th>
                                        <th>Department Name</th>
                                        <th>IsActive</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DrptList)
                                    {
                                        i++;
                                        if (item.IsActive)
                                        {
                                            <tr>
                                                <td>@i </td>
                                                <td>@item.DepartmentCode</td>
                                                <td>@item.DepartmentName</td>
                                                <td>@item.IsActive</td>
                                                <td>@Html.ActionLink("Edit", "Edit", "Department", new {id = item.DepartmentId}, new {@class = "btn btn-outline btn-primary"})</td>

                                            </tr>
                                        }
                                        else
                                        {
                                            <tr class="line-through">
                                                <td>@i </td>
                                                <td>@item.DepartmentCode</td>
                                                <td>@item.DepartmentName</td>
                                                <td>@item.IsActive</td>
                                                <td>@Html.ActionLink("Edit", "Edit", "Department", new {id = item.DepartmentId}, new {@class = "btn btn-outline btn-primary"})</td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    </div>
    
   
}