@model SchoolApplication.Areas.Admin.Models.DepartmentModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { id = "myForm" }))
{
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Edit Department</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    @* <div class="panel-heading">
                        Basic Form Elements
                    </div>*@
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.ValidationSummary(true, "Can't save department!", new { @class = "alert alert-danger" })
                                @Html.HiddenFor(x => x.DepartmentId)
                                @Html.HiddenFor(x => x.HiddenValue)
                                <div class="form-group">
                                    <label>Department Name</label>
                                    @Html.TextBoxFor(x => x.DepartmentCode, new { @class = "form-control", @placeholder = "Department Name" })
                                    <p class="help-block">@Html.ValidationMessageFor(x => x.DepartmentCode, null, new { @class = "alert-warning" })</p>
                                </div>
                                <div class="form-group">
                                    <label>Department Name</label>
                                    @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control", @placeholder = "Department Name" })
                                    <p class="help-block">@Html.ValidationMessageFor(x => x.DepartmentName, null, new { @class = "alert-warning" })</p>
                                </div>

                                <div class="form-group">
                                    <label>Is Active</label>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(x => x.IsActive)
                                        </label>
                                    </div>
                                </div>

                                <button onclick="validate();" type="submit" class="btn btn-primary" id="btnSave">Save</button>
                                @if (ViewBag.message != null)
                                {
                                    <div class="alert alert-success col-sm-12">@ViewBag.message</div>
                                }
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>

}
